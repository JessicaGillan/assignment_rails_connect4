
<% @board.each do |row| %>
  <% row.each do |cell| %>
    <%= cell.nil? ?  "|___" : "|_#{cell}_" %>
  <% end %>
  |
  <br>
<% end %>
<p>-----------------------------</p>
<p>| 1 | 2 | 3 | 4 | 5 | 6 | 7 |</p>


<form id='edit_board' accept-charset="UTF-8"
  action="/drop_piece" method='post'>
  <input  type="hidden"
          name="authenticity_token"
          value="<%= form_authenticity_token %>">

  <input name="_method" type="hidden" value="patch" />

  <%= radio_button_tag(:col, "1") %>
  <%= label_tag(:age_child, "I am younger than 21") %>
  <%= radio_button_tag(:col, "2") %>
  <%= label_tag(:age_adult, "I'm over 21") %>
  <input name='commit' type='submit'
        value="Drop Piece!">
</form>
